{
  "name": "blockchain-core",
  "version": "1.0.0",
  "description": "A simple blockchain implementation",
  "main": "index.ts",
  "scripts": {
    "start": "npx ts-node src/index.ts",
    "start:source": "npx tsc && node out/index.ts",
    "build": "npx tsc",
    "watch": "npx tsc src/index.ts --watch",
    "test": "npx mocha __tests__/**/*.ts -r ts-node/register",
    "lint": "npx eslint src/*.ts",
    "lint:fix": "npx eslint src/*.ts --fix",
    "format": "npx prettier src/*.ts --write"
  },
  "keywords": [
    "blockchain"
  ],
  "author": "Ilya Revenko <ilya.revenko17@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/chai": "^4.2.14",
    "@types/mocha": "^8.2.0",
    "@types/node": "^14.14.20",
    "chai": "^4.2.0",
    "mocha": "^8.2.1",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "crypto-js": "^4.0.0",
    "elliptic": "^6.5.3"
  }
}
